<?xml version="1.0" encoding="utf-8"?>
<!-- 主界面布局 V2 - 标题在顶栏+双列对撞色概要卡片 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white">

    <!-- AppBar - 显示话题标题 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/detailToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_vote_down"
        app:navigationIconTint="@color/text_primary">

        <!-- 自定义标题布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_small"
            android:paddingEnd="@dimen/spacing_normal">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="如何在校园社区中促进理性讨论？" />

            <TextView
                android:id="@+id/toolbarSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                tools:text="发布者：李明 · 2小时前" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- 分割线 -->
    <View
        android:id="@+id/toolbarDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detailToolbar" />

    <!-- 主内容区 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/inputBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarDivider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 话题描述卡片（可折叠） -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="@dimen/corner_medium"
                app:cardElevation="@dimen/card_elevation_low"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <!-- 话题描述（折叠显示） -->
                    <TextView
                        android:id="@+id/postBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        tools:text="这是话题的详细描述内容..." />

                    <!-- 展开/收起按钮 -->
                    <TextView
                        android:id="@+id/expandDescButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="@dimen/spacing_small"
                        android:text="@string/action_expand_description"
                        android:textColor="@color/primary_pink"
                        android:textSize="13sp" />

                    <!-- 统计信息 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/viewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            tools:text="浏览：328" />

                        <TextView
                            android:id="@+id/likeCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_normal"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            tools:text="点赞：156" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <!-- 标签 -->
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/tagGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipSpacingHorizontal="@dimen/spacing_mini"
                            app:singleLine="true" />
                    </LinearLayout>

                    <!-- 操作按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/likeButton"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:text="@string/action_like"
                            app:backgroundTint="@color/primary_pink_light"
                            app:cornerRadius="@dimen/corner_medium"
                            app:icon="@drawable/ic_vote_up"
                            app:iconGravity="textStart" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/collectButton"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:text="@string/action_collect"
                            app:cornerRadius="@dimen/corner_medium"
                            app:icon="@drawable/ic_save"
                            app:iconGravity="textStart"
                            app:iconTint="@color/primary_orange"
                            app:strokeColor="@color/primary_orange" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 双列对撞色概要卡片 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_normal"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- 补充列（左侧-粉色系） -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/supplementCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/primary_pink_light"
                    app:cardCornerRadius="@dimen/corner_medium"
                    app:cardElevation="@dimen/card_elevation_low"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_normal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/tab_supplement"
                            android:textColor="@color/primary_pink"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/supplementCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_mini"
                            android:gravity="center"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            tools:text="3条观点" />

                        <!-- 预览列表 -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/supplementPreviewList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_opinion_preview" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="@dimen/spacing_small"
                            android:text="@string/action_view_all"
                            android:textColor="@color/primary_pink"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 质疑列（右侧-橙色系） -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/questionCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/primary_orange_light"
                    app:cardCornerRadius="@dimen/corner_medium"
                    app:cardElevation="@dimen/card_elevation_low"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_normal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/tab_question"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/questionCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_mini"
                            android:gravity="center"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            tools:text="3条观点" />

                        <!-- 预览列表 -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/questionPreviewList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:nestedScrollingEnabled="false"
                            tools:itemCount="3"
                            tools:listitem="@layout/item_opinion_preview" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:padding="@dimen/spacing_small"
                            android:text="@string/action_view_all"
                            android:textColor="@color/primary_orange"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- 底部间距 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_normal" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 底部输入栏 - 带类型选择 -->
    <LinearLayout
        android:id="@+id/inputBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 类型选择器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_select_type"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/opinionTypeToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_small"
                app:checkedButton="@id/supplementToggle"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/supplementToggle"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingHorizontal="@dimen/spacing_medium"
                    android:text="@string/type_supplement"
                    android:textSize="12sp"
                    app:cornerRadius="@dimen/corner_medium"
                    app:strokeColor="@color/primary_pink" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/questionToggle"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:paddingHorizontal="@dimen/spacing_medium"
                    android:text="@string/type_question"
                    android:textSize="12sp"
                    app:cornerRadius="@dimen/corner_medium"
                    app:strokeColor="@color/primary_orange" />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>

        <!-- 输入框和提交按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_small"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/background_input"
                app:cardCornerRadius="@dimen/corner_large"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/opinionInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/hint_add_opinion"
                    android:maxLength="500"
                    android:maxLines="3"
                    android:minLines="1"
                    android:padding="@dimen/spacing_medium"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="14sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitOpinionButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="0dp"
                android:paddingHorizontal="@dimen/spacing_normal"
                android:text="@string/action_submit"
                android:textSize="14sp"
                app:backgroundTint="@color/primary_pink"
                app:cornerRadius="@dimen/corner_large" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

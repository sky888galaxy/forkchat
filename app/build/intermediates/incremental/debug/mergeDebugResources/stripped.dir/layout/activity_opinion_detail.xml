<?xml version="1.0" encoding="utf-8"?>
<!-- 观点详情界面 - 单列完整展示 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_pink_light">

    <!-- 顶栏 -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_vote_down"
        app:navigationIconTint="@color/text_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="@dimen/spacing_small"
            android:paddingEnd="@dimen/spacing_normal">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="如何在校园社区中促进理性讨论？" />

            <TextView
                android:id="@+id/toolbarType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textColor="@color/primary_pink"
                android:textSize="12sp"
                tools:text="补充" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <View
        android:id="@+id/toolbarDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/divider_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- 观点列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/opinionList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarDivider"
        tools:listitem="@layout/item_opinion_detail" />

    <!-- 底部输入栏 -->
    <LinearLayout
        android:id="@+id/inputBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 类型选择器 -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/replyTypeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/spacing_small"
            app:checkedButton="@id/btnSupplement"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSupplement"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:minHeight="0dp"
                android:paddingHorizontal="@dimen/spacing_medium"
                android:text="补充"
                android:textSize="12sp"
                app:cornerRadius="@dimen/corner_small"
                app:strokeColor="@color/primary_pink" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnQuestion"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:minHeight="0dp"
                android:paddingHorizontal="@dimen/spacing_medium"
                android:text="质疑"
                android:textSize="12sp"
                app:cornerRadius="@dimen/corner_small"
                app:strokeColor="@color/primary_orange" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- 输入框行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_small"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/background_input"
                app:cardCornerRadius="@dimen/corner_large"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/replyInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="@string/hint_add_reply"
                    android:maxLength="200"
                    android:maxLines="3"
                    android:minLines="1"
                    android:padding="@dimen/spacing_medium"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint"
                    android:textSize="14sp" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitReplyButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minWidth="0dp"
                android:paddingHorizontal="@dimen/spacing_normal"
                android:text="@string/action_submit"
                android:textSize="14sp"
                app:backgroundTint="@color/primary_pink"
                app:cornerRadius="@dimen/corner_large" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

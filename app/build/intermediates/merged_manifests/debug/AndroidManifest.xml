<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.forkchat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34" />

    <permission
        android:name="com.example.forkchat.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.forkchat.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ForkChat" >

        <!-- 主Activity -->
        <activity
            android:name="com.example.forkchat.MainActivity"
            android:exported="true"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.forkchat.PostDetailActivity"
            android:exported="false"
            android:label="帖子详情" />
        <activity
            android:name="com.example.forkchat.CreatePostActivity"
            android:exported="false"
            android:label="发布帖子" />
        <activity
            android:name="com.example.forkchat.EditPostActivity"
            android:exported="false"
            android:label="编辑帖子" />

        <!-- 用户资料Activity -->
        <activity
            android:name="com.example.forkchat.activity.UserProfileActivity"
            android:exported="false"
            android:label="个人中心" />

        <!-- 编辑资料Activity -->
        <activity
            android:name="com.example.forkchat.activity.EditProfileActivity"
            android:exported="false"
            android:label="编辑资料" />

        <!-- 修改密码Activity -->
        <activity
            android:name="com.example.forkchat.activity.ChangePasswordActivity"
            android:exported="false"
            android:label="修改密码" />
        <!-- 登录 Activity -->
        <activity
            android:name="com.example.forkchat.activity.LoginActivity"
            android:exported="false"
            android:label="登录" />

        <!-- 注册 Activity -->
        <activity
            android:name="com.example.forkchat.activity.RegisterActivity"
            android:exported="false"
            android:label="注册" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.forkchat.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <uses-library
            android:name="androidx.window.extensions"
            android:required="false" />
        <uses-library
            android:name="androidx.window.sidecar"
            android:required="false" />

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>